@using BrainFlow.UI.Web.Helpers
@using System.Security.Claims

<aside class="app-sidebar bg-gray-dark shadow">
    <div class="sidebar-brand">
        <a href="#" class="brand-link">
            <img src="~/images/logos/brainflow_logo.svg" alt="BrainFlow Logo" class="brand-image" style="opacity: .8">
        </a>
    </div>
    <div class="sidebar-wrapper overflow-hidden">
        <div>
            <nav class="mt-1">
                <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home", new { area = "" })" class="nav-link">
                            <i class="nav-icon fas fa-house-user text-white"></i>
                            <p class="text-white">Início</p>
                        </a>
                    </li>
                    @if (AcessoSistema.IsAdmin(User))
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("AprovarAfiliados", "Admin", new { area = "Admin" })" class="nav-link">
                                <i class="nav-icon fas fa-user-check text-white"></i>
                                <p class="text-white">Aprovar Afiliados</p>
                            </a>
                        </li>
                    }
                    @if (AcessoSistema.IsAfiliado(User))
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Afiliado", new { area = "Afiliado" })" class="nav-link">
                                <i class="nav-icon fas fa-chart-line text-white"></i>
                                <p class="text-white">Dashboard Afiliado</p>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</aside>