@using System.Security.Claims
@{
    var nomeCompleto = User.FindFirst(ClaimTypes.Name)?.Value ?? "Usuário";
    var primeiroNome = nomeCompleto.Split(' ')[0];
}

<nav class="app-header navbar navbar-expand bg-green-primary shadow">
    <div class="container-fluid">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" data-lte-toggle="sidebar" href="#" role="button">
                    <i class="fa fa-bars"></i>
                </a>
            </li>
            <li class="nav-item user-menu me-2 mt-1">
                <span class="d-none d-md-inline text-white me-4" style="font-size: 1.1em;">Olá, @primeiroNome</span>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item user-menu me-3">
                <a asp-controller="Login" asp-action="Sair" type="button" class="btn btn-outline-light shadow py-1 px-2 fw-light">
                    Sair<i class="ms-2 fas fa-arrow-alt-circle-right"></i>
                </a>
            </li>
        </ul>
    </div>
</nav>