@using System.Configuration
@{
    var nomeCompleto = User.FindFirst("NmUsuario")?.Value ?? "";
    var nomes = nomeCompleto.Split(' ', StringSplitOptions.RemoveEmptyEntries);

    string primeiroNome = nomes.Length > 0 ? nomes[0] : "";
    string ultimoNome = nomes.Length > 1 ? nomes[nomes.Length - 1] : "";

    string formatarNome(string nome) =>
        char.ToUpper(nome[0]) + nome.Substring(1).ToLower();

    var nomeFormatado = $"{formatarNome(primeiroNome)} {formatarNome(ultimoNome)}";
}

