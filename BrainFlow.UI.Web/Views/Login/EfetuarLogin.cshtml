@model LoginViewMOD
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="login-box py-4 animate_animated animate_fadeInDownBig">
            <div class="login-logo fw-bold text-secondary">
                <b class="text-white me-2">Acesse</b> a Plataforma
            </div>
            <div class="card shadow rounded-2">
                <div class="card-body login-card-body rounded-2">
                    <div class="card-header">
                        <div class="card-img-top text-center">
                            <img class="img img-fluid" src="~/images/logo.png" alt="BrainFlow Logo">
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Login" asp-action="EfetuarLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" asp-antiforgery="true">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="mb-3">
                                <label class="form-label" for="Username">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="Username" class="form-control" placeholder="Digite seu email" />
                                </div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="Password">Senha</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Digite sua senha" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-4">
                                <input asp-for="LembrarDeMim" type="checkbox" class="form-check-input" id="lembrar-de-mim">
                                <label class="form-check-label" for="lembrar-de-mim">Lembrar de mim</label>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-lg btn-primary text-white rounded-pill">Entrar</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <div class="row">
                            <div class="col-12 mt-2">
                                <div class="row">
                                    <div class="col-12 d-grid">
                                        <a href="@Url.Action("Index", "Cadastro")" class="btn btn-outline-secondary"><span class="fas fa-user-plus me-2"></span>Cadastrar novo usuário</a>
                                    </div>
                                    <div class="col-12 d-grid mt-3">
                                        <a href="@Url.Action("RecuperarSenha", "Login")" class="btn btn-outline-secondary"><span class="fas fa-question me-2"></span>Esqueci minha senha</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
