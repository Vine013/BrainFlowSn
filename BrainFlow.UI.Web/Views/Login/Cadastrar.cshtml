@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="login-box py-4 animate__animated animate__fadeInDownBig">
            <div class="login-logo text-purple fw-bold">
                <span class="fas fa-brain animate__animated animate__infinite animate__pulse"></span>
                <b class="text-white">Brain</b>Flow
            </div>
            <div class="card shadow rounded-2">
                <div class="card-body login-card-body rounded-2">
                    <p class="login-box-msg mb-4">Cadastre-se para começar a aprender!</p>

                    <form asp-controller="Login" asp-action="Cadastrar" method="post" asp-antiforgery="true">
                        <div class="mb-3">
                            <label class="form-label">Nome Completo</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input type="text" name="NoUsuario" class="form-control" placeholder="Digite seu nome completo" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">E-mail</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input type="email" name="TxEmail" class="form-control" placeholder="Digite seu e-mail" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Telefone (opcional)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input type="text" name="TxTelefone" class="form-control telefone-celular" placeholder="Digite seu telefone" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" name="TxSenha" class="form-control" placeholder="Digite sua senha" required />
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-lg bg-primary text-white rounded-pill">Registrar</button>
                        </div>
                    </form>
                    <p class="text-center mt-3">
                        Já tem uma conta? <a href="@Url.Action("EfetuarLogin", "Login")" class="text-purple">Faça login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
