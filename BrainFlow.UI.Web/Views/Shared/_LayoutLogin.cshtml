<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrainFlow</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/admin-lte/dist/css/adminlte.min.css" asp-append-version="true" />
    <link href="~/lib/admin-lte/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/custom.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="login-page bg-primary">
    <div class="loader" style="display:none;">
        <span class="fa fa-spinner fa-pulse fa-3x fa-fw text-secondary"></span>
    </div>
    <div class="wrapper">
        <div class="content-wrapper ml-0 pl-0">
            <section class="content">
                @await Html.PartialAsync("_PartialModalMensagem")
                @RenderBody()
            </section>
        </div>
    </div>

    <script src="~/lib/admin-lte/plugins/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/admin-lte/plugins/inputmask/jquery.inputmask.min.js"></script>

    <script>
        $(document).ready(function () {
            $('form').on('submit', function () {
                if ($(this).valid()) {
                    $('.loader').show();
                }
            });

            $(document).ajaxStart(function () {
                $('.loader').show();
            });

            $(document).ajaxStop(function () {
                $('.loader').hide();
            });

            $('input').attr('autocomplete', 'off');

            // Máscaras de input
            $('.telefone-celular').inputmask('(99) 99999-9999');
            $('.cpf').inputmask('999.999.999-99');
            $('.cep').inputmask('99999-999');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
